@using WebApp.Models.ViewModels;
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

    <p class="login-box-msg">You forgot your password? <br /> Here you can easily retrieve a new password.</p>
    <div asp-validation-summary="All" class="text-danger mt-2"></div>

    <form asp-action="ForgotPassword" method="post">
                  
        <div class="input-group mb-3">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
                   
        <div class="my-3">
            <button type="submit" class="btn btn-info btn-block">Request new password</button>
        </div>
        <div class="my-3">
            <a asp-action="Login" asp-controller="Account" class="btn btn-dark btn-block">Back to Login</a>
        </div>
    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

